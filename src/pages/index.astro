---
import UserList from './partials/list.astro';
import CounterComp from './partials/counter.astro';
---

<html lang="en">
  <head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>htmx-test</title>
	</head>
	<body class="min-w-[22rem] max-w-3xl text-white bg-zinc-900 text-xl mt-5 mx-auto px-2">
    <div class="flex justify-end">
      <div class="mt-5 w-12 h-12 rounded-full bg-white text-black flex items-center justify-center">
        <div id="anotherCounter">
          0
        </div>
      </div>
    </div>
		<h1 class="text-5xl mb-5">Users</h1>
    <div class="flex">
      <div>Page</div>
      {[1, 2, 3].map((page) => (
        <a
          href="#"
          class="w-8 h-8 flex items-center justify-center mx-2 hover:border-b-2"
          hx-get={`/partials/list?page=${page}`}
          hx-target="#contents"
        >
          {page}</a>
      ))}
      <input
        class="ml-auto w-1/3 px-3 border-1 rounded-md text-black text-sm"
        type="text"
        name="search"
        placeholder="Search"
        hx-trigger="keyup changed delay:200ms"
        hx-get="/partials/search"
        hx-target="#contents"
      />
    </div>
    <div id="contents" class="mt-3 p-3 border-2 rounded-xl">
      <UserList />
    </div>

    <hr class="my-5">
    <h1 class="text-5xl mb-5">Counter</h1>
    <CounterComp />
	</body>
</html>
